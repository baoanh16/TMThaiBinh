section.canhcam-form-1
	.container
		.row.info
			.col-md-5.col-lg-4
				article.inf.h-100(bg-img="./img/bg/bg.png")
					figure
						img.img-fluid(src="./img/logo.png", alt="alt")
						figcaption
							p 219 Thạch Lam, P.Phú Thạnh, Q.Tân Phú, Tp.Hồ Chí Minh
							p T:(028) 38 611 666
							p F:(028) 38 611 888
							p hotline:0917 001 414

			.col-md-7.col-lg-8
				h3.h3.mt-5.mt-md-0.mb-4 Complete this form to email us your enquiry
				form.validator
					.row
						.form-group.col-md-6
							label(for='name') Name
								span.text-danger (*)
							input#name.form-control(type='text', placeholder='Name', data-error="Vui lòng nhập thông tin", required)
							.help-block.with-errors
						.form-group.col-md-6
							label(for='Email') Email
							input#Email.form-control(type='text', placeholder='Email', data-error="Vui lòng nhập thông tin", pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", required)
							.help-block.with-errors
					.row
						.form-group.col-md-6
							label(for='Phone') Phone
							input#Phone.form-control(type='text', placeholder='Phone', data-error="Vui lòng nhập thông tin", pattern="^[_A-z0-9]{1,}$", required)
							.help-block.with-errors
						.form-group.col-md-6
							label(for='Address') Address
							input#Address.form-control(type='text', placeholder='Address')
					.row
						.form-group.col
							label(for='sms') Message
							textarea#sms.form-control(name="sms", cols="30", rows="5")

					.row
						.col
							button.btn.btn-outline-primary.text-uppercase(type="submit")
								| Submit
